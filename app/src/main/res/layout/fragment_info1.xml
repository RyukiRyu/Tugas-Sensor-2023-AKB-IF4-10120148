<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.info.InfoFragment1">
    <TextView
        android:id="@+id/txtJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tentang Aplikasi"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="24dp"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="207dp"
        android:layout_height="226dp"
        android:layout_below="@+id/txtJudul"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_app" />
    <TextView
        android:id="@+id/txtinfo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplikasi ini ditujukan untuk memenuhi tugas mata kuliah Aplikasi Komputasi Bergerak"
        android:layout_below="@+id/logo"
        android:textAlignment="textStart"/>
    <TextView
        android:id="@+id/txtinfo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ada 2 fitur yang tersedia yaitu layanan lokasi saat ini dan juga lokasi dari 5 tempat makanan rekomendasi"
        android:layout_below="@+id/txtinfo1"
        android:textAlignment="textStart"/>
    <TextView
        android:id="@+id/txtinfo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Semoga Membantu!!"
        android:layout_below="@+id/txtinfo2"
        android:textAlignment="textStart"/>
    <TextView
        android:id="@+id/txtinfo5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10121048-Ariyandi Julian Pratama-IF-4"
        android:layout_below="@+id/txtinfo3"
        android:paddingTop="20dp"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Geser untuk ke halaman selanjutnya >>"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:layout_centerInParent="true"/>

</RelativeLayout>